rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-scoped agent wrappers
    match /users/{userId}/agentWrappers/{wrapperId} {
      // Only authenticated users can access their own agent wrappers
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User-scoped multi-agent systems
    match /users/{userId}/multiAgentSystems/{systemId} {
      // Only authenticated users can access their own multi-agent systems
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User profile documents
    match /users/{userId} {
      // Only authenticated users can access their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User preferences documents
    match /userPreferences/{userId} {
      // Only authenticated users can access their own preferences
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write access to the 'activities' collection for authenticated users
    match /activities/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read/write access to the 'waitlist' collection for authenticated users
    match /waitlist/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the 'agentIdentities' collection for authenticated users
    match /agentIdentities/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the 'agentAttestations' collection for authenticated users
    match /agentAttestations/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the 'agentRoles' collection for authenticated users
    match /agentRoles/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the 'agentRoleAssignments' collection for authenticated users
    match /agentRoleAssignments/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the 'scorecardTemplates' collection for authenticated users
    match /scorecardTemplates/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the 'scorecardResults' collection for authenticated users
    match /scorecardResults/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

