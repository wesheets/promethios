# Firestore Security Rules for Promethios

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-scoped agent wrappers
    match /users/{userId}/agentWrappers/{wrapperId} {
      // Only authenticated users can access their own agent wrappers
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profile documents (if needed in the future)
    match /users/{userId} {
      // Only authenticated users can access their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

