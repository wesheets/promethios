{
  "name": "promethios-email-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Promethios email automation",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "@types/node": "^18.18.0",
    "@types/nodemailer": "^6.4.14"
  },
  "private": true
}

