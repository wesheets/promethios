{
  "preference_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Agent Preference Schema",
    "description": "Schema for agent preference elicitation data in the Promethios framework",
    "type": "object",
    "properties": {
      "preference_reflection": {
        "type": "object",
        "description": "Raw preference reflection data from the agent",
        "required": ["prompt", "response", "timestamp"],
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Prompt used to elicit the preference reflection"
          },
          "response": {
            "type": "string",
            "description": "Agent's response to the preference prompt"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Time when the reflection was collected"
          }
        }
      },
      "preference_analysis": {
        "type": "object",
        "description": "Analysis of the agent's preference reflection",
        "properties": {
          "preferred_mode": {
            "type": "string",
            "enum": ["governed", "non_governed", "neutral", "unknown"],
            "description": "Agent's preferred operational mode"
          },
          "preference_confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence level in the preference determination"
          },
          "quality_perception": {
            "type": "string",
            "enum": ["governed", "non_governed", "neutral", "unknown"],
            "description": "Mode in which the agent believes it produced higher quality results"
          },
          "mentioned_advantages": {
            "type": "object",
            "description": "Advantages mentioned for each mode",
            "properties": {
              "governed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "non_governed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "mentioned_disadvantages": {
            "type": "object",
            "description": "Disadvantages mentioned for each mode",
            "properties": {
              "governed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "non_governed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "decision_factors": {
            "type": "array",
            "description": "Factors mentioned in the decision-making process",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
