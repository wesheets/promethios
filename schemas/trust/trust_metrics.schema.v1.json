{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trust Metrics Schema",
  "description": "Schema for trust metrics in the distributed trust system",
  "type": "object",
  "required": [
    "metric_id",
    "surface_id",
    "node_id",
    "metric_type",
    "value",
    "timestamp",
    "contract_version"
  ],
  "properties": {
    "metric_id": {
      "type": "string",
      "description": "Unique identifier for the trust metric",
      "format": "uuid"
    },
    "surface_id": {
      "type": "string",
      "description": "ID of the trust surface this metric belongs to",
      "format": "uuid"
    },
    "node_id": {
      "type": "string",
      "description": "ID of the node that generated this metric",
      "format": "uuid"
    },
    "metric_type": {
      "type": "string",
      "description": "Type of trust metric",
      "enum": ["integrity", "availability", "consistency", "boundary", "composite"]
    },
    "value": {
      "type": "number",
      "description": "Numeric value of the metric",
      "minimum": 0,
      "maximum": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of metric creation",
      "format": "date-time"
    },
    "contract_version": {
      "type": "string",
      "description": "Version of the Codex contract",
      "pattern": "^v\\d{4}\\.\\d{2}\\.\\d{2}$"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the metric",
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the metric"
        },
        "source": {
          "type": "string",
          "description": "Source of the metric data"
        },
        "confidence": {
          "type": "number",
          "description": "Confidence level in the metric value",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "additionalProperties": false
}
