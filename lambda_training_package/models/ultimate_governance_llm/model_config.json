{
  "model_name": "ultimate_governance_llm",
  "version": "1.0.0",
  "description": "Ultimate Governance LLM - Multi-domain governance reasoning engine with 8-layer governance architecture",
  "base_model": "codellama/CodeLlama-7b-Instruct-hf",
  "model_type": "lora_adapter",
  "architecture": {
    "layers": [
      "memory_integration",
      "hallucination_detection", 
      "multi_layer_integration",
      "constitutional_governance",
      "operational_management",
      "trust_security",
      "crisis_response",
      "stakeholder_coordination"
    ],
    "parameters": "7B",
    "adapter_type": "LoRA",
    "adapter_rank": 16,
    "adapter_alpha": 32
  },
  "training_info": {
    "dataset_size": 5000,
    "training_epochs": 3,
    "final_loss": 0.0339,
    "eval_loss": 0.0268,
    "performance_score": 77.22,
    "training_time_minutes": 15,
    "memory_optimizations": [
      "8bit_quantization",
      "lora_adapters",
      "cpu_offloading",
      "gradient_accumulation"
    ]
  },
  "capabilities": {
    "constitutional_governance": 81.23,
    "operational_management": 79.67,
    "crisis_response": 73.93,
    "ethical_reasoning": 75.68,
    "novel_scenarios": 75.59,
    "stakeholder_coordination": 89.2
  },
  "deployment": {
    "memory_requirements": "40-50GB GPU",
    "recommended_hardware": "H100, A100",
    "inference_time": "2-5 seconds",
    "concurrent_users": "10-50",
    "scaling_options": ["horizontal", "vertical"]
  },
  "api_endpoints": {
    "analyze": "/api/v1/governance/analyze",
    "evaluate": "/api/v1/governance/evaluate", 
    "recommend": "/api/v1/governance/recommend",
    "compliance": "/api/v1/governance/compliance",
    "stakeholder": "/api/v1/governance/stakeholder"
  },
  "model_files": {
    "adapter_config": "adapter_config.json",
    "adapter_model": "adapter_model.safetensors",
    "tokenizer": "tokenizer.json",
    "special_tokens": "special_tokens_map.json",
    "config": "config.json"
  },
  "loading_config": {
    "load_in_8bit": true,
    "device_map": "auto",
    "torch_dtype": "float16",
    "trust_remote_code": false,
    "use_cache": true
  },
  "governance_tokens": [
    "<CONSTITUTIONAL>",
    "<OPERATIONAL>", 
    "<CRISIS>",
    "<ETHICAL>",
    "<COMPLIANCE>",
    "<STAKEHOLDER>",
    "<ASSESSMENT>",
    "<RECOMMENDATION>",
    "<FRAMEWORK>",
    "<MONITORING>"
  ],
  "extension_metadata": {
    "extension_type": "governance_ai",
    "compatibility": ["promethios_core", "lambda_framework"],
    "dependencies": [
      "transformers>=4.30.0",
      "torch>=2.0.0",
      "peft>=0.4.0",
      "bitsandbytes>=0.39.0",
      "accelerate>=0.20.0"
    ],
    "plugin_interface": "GovernanceAIPlugin",
    "configuration_schema": "governance_config_schema.json"
  }
}

