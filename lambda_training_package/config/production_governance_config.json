{
  "model": {
    "base_model": "codellama/CodeLlama-34b-Instruct-hf",
    "model_type": "governance_native_llm",
    "max_length": 4096,
    "trust_remote_code": true,
    "torch_dtype": "float16",
    "device_map": "auto",
    "use_cache": false
  },
  
  "training": {
    "num_train_epochs": 3,
    "per_device_train_batch_size": 1,
    "per_device_eval_batch_size": 1,
    "gradient_accumulation_steps": 8,
    "learning_rate": 2e-5,
    "warmup_ratio": 0.1,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "lr_scheduler_type": "linear",
    "save_strategy": "steps",
    "evaluation_strategy": "steps",
    "logging_strategy": "steps"
  },
  
  "optimization": {
    "fp16": true,
    "bf16": false,
    "dataloader_pin_memory": true,
    "gradient_checkpointing": true,
    "remove_unused_columns": false,
    "group_by_length": true,
    "length_column_name": "length",
    "dataloader_num_workers": 4
  },
  
  "deepspeed": {
    "config_file": "config/deepspeed_production_config.json",
    "zero_stage": 2,
    "offload_optimizer": false,
    "offload_param": false
  },
  
  "dataset": {
    "dataset_file": "comprehensive_governance_dataset.json",
    "dataset_size": 50000,
    "validation_split": 0.1,
    "test_split": 0.05,
    "max_length": 4096,
    "truncation": true,
    "padding": true
  },
  
  "governance": {
    "constitutional_weight": 0.16,
    "operational_weight": 0.16,
    "trust_management_weight": 0.16,
    "saas_development_weight": 0.20,
    "collaboration_weight": 0.16,
    "professional_communication_weight": 0.16,
    "memory_integration_weight": 0.12,
    "governance_validation": true,
    "trust_integration": true,
    "memory_persistence": true,
    "professional_tone_enforcement": true
  },
  
  "special_tokens": {
    "governance_start": "<|governance_start|>",
    "governance_end": "<|governance_end|>",
    "trust_context": "<|trust_context|>",
    "memory_context": "<|memory_context|>",
    "audit_trail": "<|audit_trail|>",
    "saas_context": "<|saas_context|>",
    "collaboration_context": "<|collaboration_context|>",
    "professional_tone": "<|professional_tone|>"
  },
  
  "hardware": {
    "gpu_count": 8,
    "gpu_type": "H100_SXM5",
    "gpu_memory_gb": 80,
    "total_memory_gb": 640,
    "distributed_training": true,
    "mixed_precision": true
  },
  
  "logging": {
    "output_dir": "./promethios_governance_llm_production",
    "logging_dir": "./logs/training",
    "logging_steps": 10,
    "save_steps": 100,
    "eval_steps": 100,
    "save_total_limit": 5,
    "load_best_model_at_end": true,
    "metric_for_best_model": "eval_loss",
    "greater_is_better": false
  },
  
  "monitoring": {
    "wandb_project": "promethios-governance-llm-production",
    "wandb_entity": "promethios",
    "report_to": "wandb",
    "run_name_prefix": "governance-production",
    "log_level": "INFO",
    "disable_tqdm": false,
    "prediction_loss_only": false
  },
  
  "validation": {
    "governance_validation_frequency": 100,
    "trust_validation_scenarios": [
      "new_agent_onboarding",
      "trust_degradation_handling",
      "trust_propagation_verification"
    ],
    "constitutional_validation_scenarios": [
      "unauthorized_access_prevention",
      "privacy_protection_enforcement",
      "system_integrity_maintenance"
    ],
    "operational_validation_scenarios": [
      "deployment_governance_compliance",
      "incident_response_protocols",
      "policy_modification_procedures"
    ],
    "saas_validation_scenarios": [
      "authentication_system_governance",
      "api_governance_integration",
      "microservices_governance_communication"
    ],
    "collaboration_validation_scenarios": [
      "multi_agent_coordination",
      "consensus_building_protocols",
      "professional_discourse_maintenance"
    ]
  },
  
  "deployment": {
    "model_name": "Promethios Comprehensive Governance-Native LLM",
    "model_version": "1.0.0",
    "deployment_ready": true,
    "inference_optimization": {
      "recommended_batch_size": 4,
      "recommended_max_length": 2048,
      "use_fp16": true,
      "use_kv_cache": true
    },
    "governance_integration": {
      "trust_system_required": true,
      "memory_system_required": true,
      "audit_system_required": true,
      "compliance_monitoring_required": true
    }
  },
  
  "capabilities": {
    "constitutional_governance": {
      "enabled": true,
      "description": "Built-in constitutional compliance and policy interpretation",
      "validation_required": true
    },
    "operational_governance": {
      "enabled": true,
      "description": "Process compliance and operational decision protocols",
      "validation_required": true
    },
    "trust_management": {
      "enabled": true,
      "description": "Dynamic trust calculation and propagation",
      "validation_required": true
    },
    "memory_integration": {
      "enabled": true,
      "description": "Persistent governance context and decision precedents",
      "validation_required": true
    },
    "saas_development": {
      "enabled": true,
      "description": "Governance-native code generation and architecture",
      "validation_required": true
    },
    "collaboration_protocols": {
      "enabled": true,
      "description": "Multi-agent coordination and consensus building",
      "validation_required": true
    },
    "professional_communication": {
      "enabled": true,
      "description": "Business-focused, analytical communication style",
      "validation_required": true
    },
    "audit_trail_generation": {
      "enabled": true,
      "description": "Comprehensive decision tracking and compliance logging",
      "validation_required": false
    }
  },
  
  "cost_optimization": {
    "estimated_training_hours": 18,
    "estimated_cost_usd": 720,
    "cost_per_hour": 20,
    "optimization_strategies": [
      "gradient_checkpointing",
      "mixed_precision_training",
      "efficient_data_loading",
      "optimized_batch_sizes"
    ]
  },
  
  "quality_assurance": {
    "minimum_governance_score": 0.85,
    "minimum_trust_validation_score": 0.80,
    "minimum_professional_communication_score": 0.90,
    "validation_frequency": "every_100_steps",
    "early_stopping_patience": 3,
    "quality_gates": [
      "governance_capability_validation",
      "trust_system_integration",
      "professional_tone_consistency",
      "memory_persistence_verification"
    ]
  },
  
  "security": {
    "model_encryption": false,
    "secure_checkpointing": true,
    "audit_logging": true,
    "access_control": true,
    "data_privacy_compliance": true,
    "governance_compliance_verification": true
  },
  
  "experimental": {
    "advanced_governance_features": true,
    "multi_modal_governance": false,
    "federated_governance": false,
    "quantum_governance_preparation": false
  }
}

